{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build (Debug)",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"--configuration", "Debug",
				"--nologo",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Build (Release)",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"--configuration", "Release",
				"--nologo",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Test",
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"--nologo",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		}
	]
}
